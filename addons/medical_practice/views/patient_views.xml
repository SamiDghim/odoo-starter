<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Patient Tree View -->
    <record id="view_medical_patient_tree" model="ir.ui.view">
        <field name="name">medical.patient.tree</field>
        <field name="model">medical.patient</field>
        <field name="arch" type="xml">
            <tree>
                <field name="patient_id"/>
                <field name="name"/>
                <field name="age"/>
                <field name="gender"/>
                <field name="phone"/>
                <field name="city"/>
            </tree>
        </field>
    </record>

    <!-- Patient Form View -->
    <record id="view_medical_patient_form" model="ir.ui.view">
        <field name="name">medical.patient.form</field>
        <field name="model">medical.patient</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_view_appointments" type="object" string="View Appointments" class="oe_highlight"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_appointments" type="object" class="oe_stat_button" icon="fa-calendar">
                            <field name="appointment_count" widget="statinfo" string="Appointments"/>
                        </button>
                    </div>
                    
                    <div class="oe_title">
                        <label for="name"/>
                        <h1><field name="name" placeholder="Patient Full Name"/></h1>
                        <label for="patient_id"/>
                        <h3><field name="patient_id" readonly="1"/></h3>
                    </div>

                    <group>
                        <group name="personal_info" string="Personal Information">
                            <field name="birth_date"/>
                            <field name="age"/>
                            <field name="gender"/>
                            <field name="blood_type"/>
                        </group>
                        <group name="contact_info" string="Contact Information">
                            <field name="phone"/>
                            <field name="mobile"/>
                            <field name="email"/>
                        </group>
                    </group>

                    <group>
                        <group name="address" string="Address">
                            <field name="street"/>
                            <field name="city"/>
                            <field name="zip"/>
                            <field name="country_id"/>
                        </group>
                        <group name="emergency" string="Emergency Contact">
                            <field name="emergency_contact_name"/>
                            <field name="emergency_contact_phone"/>
                            <field name="emergency_relation"/>
                        </group>
                    </group>

                    <notebook>
                        <page name="medical_info" string="Medical Information">
                            <group>
                                <field name="allergies" nolabel="1" placeholder="Known allergies..."/>
                                <field name="medical_history" nolabel="1" placeholder="Medical history..."/>
                                <field name="current_medications" nolabel="1" placeholder="Current medications..."/>
                            </group>
                        </page>
                        <page name="insurance" string="Insurance">
                            <group>
                                <field name="insurance_company"/>
                                <field name="insurance_number"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Patient Action -->
    <record id="action_medical_patient" model="ir.actions.act_window">
        <field name="name">Patients</field>
        <field name="res_model">medical.patient</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first patient!
            </p>
            <p>
                Register patients to start managing appointments and medical records.
            </p>
        </field>
    </record>
</odoo>